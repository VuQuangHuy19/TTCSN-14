<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f3f3f3;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding-bottom: 40px;
        }


        .secsion-product{
            display: flex;
            justify-content: center;
            height: 40px;
            line-height: 40px;
            text-align: center;
            color: #333;
            margin: 30px 0px;
        }

.type-pro {
    background-color: #f8f8f8;
    padding: 10px 0;
    font-family: Arial, sans-serif;
    height: 70px; /* Tăng chiều cao */
}

/* Đặt chiều cao và căn giữa nội dung */
.nnav_main {
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.nnav_ul {
    list-style: none;
    display: flex;
    gap: 20px;
}

/* Đặt line-height cho các mục */
.nnav_ul li a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
    padding: 0px 40px;
    line-height: 70px; /* Đặt line-height để căn giữa theo chiều cao mới */
    border-radius: 5px;
    transition: background-color 0.3s, color 0.3s;
}



        .products, .product-1, .product-2 {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
            text-decoration: none;
        }

        .product-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 250px;
            padding: 20px;
            text-align: center;
            transition: transform 0.2s;
        }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-card img {
            width: 100%;
            border-radius: 8px;
        }
        
        .product-name {
            text-decoration: none;
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin: 15px 0 10px;
        }

        .product-price {
            font-size: 16px;
            font-weight: bold;
            color: #e60012;
            margin-bottom: 25px;
        }

        .buy-now-btn {
            background-color: #ff4d4f;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

        .buy-now-btn:hover {
            background-color: #e04447; /* Màu đậm hơn khi hover */
        }
        .add-to-cart-btn {
             background-color: #ff4d4f;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            width: 100%;
            margin-top: 10px;   
        }

        .add-to-cart-btn:hover {
            background-color: #e04447;
        }

        .type-pro
        {
            margin: 0 auto;
            padding-bottom: 40px;
        }
    </style>

<body>
    <div class="slider">
    <img src="/img/banner.jpg" alt="Banner">
</div>

        <div class="main1700">
            <div class="nnav_main">
                <ul class="nnav_ul clear">
                    <li><a href="/sanpham/best"><span>Best-seller</span></a></li>
                    <li><a href="/sanpham/kemtra"><span>Kem</span></a></li>
                    <li><a href="/sanpham/dua"><span>Nước Dừa Bingxue</span></a></li>
                    <li><a href="/sanpham/hoaqua"><span>Trà Hoa Quả Tươi</span></a></li>
                    <li><a href="/sanpham/trasua"><span>Trà Sữa Bingxue Tea</span></a></li>
                </ul>
            </div>
        </div>

<div class="type-pro">
        <div class="secsion-product">
            <img src="/img/logopro.png" alt="Sản Phẩm">
            <h1 style="color: #EC6A00;">Kem</h1>
        </div>

<div class="container">
      
        <div class="row">
            {{#each products}}
            <div style="margin: 10px 0px;" class="col-md-4">
                <div class="product-card">
                    <a href=""><img src="{{image}}" alt="{{name}}" class="img-fluid"></a>
                    <h3>{{name}}</h3>
                    <p class="price">{{price}} ₫ <span class="old-price">{{oldPrice}} ₫</span></p>
                    
                    <button class="add-to-cart-btn" data-slug = "{{this.slug}}">Thêm vào giỏ hàng</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


    <script>
        
        const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');

    addToCartButtons.forEach(button => {
    button.addEventListener('click', async () => {
        // Lấy thông tin sản phẩm từ data attributes
        const slug = 
            button.getAttribute('data-slug')

        try {
            // Gửi yêu cầu Ajax đến server
            const response = await fetch(`/cart/them/${slug}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                //body: JSON.stringify(productData), // Truyền toàn bộ dữ liệu sản phẩm vào body
            });

            const result = await response.json();

            if (result.success) {
                alert(result.message); // Thông báo thành công
            } else {
                alert(result.message); // Thông báo lỗi
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Vui lòng đăng nhập để sử dụng chức năng này!');
        }
    });
});
    </script>
</body>