    <script>
        let currentSlide = 0;
    
        function moveSlide(direction) {
            const items = document.querySelectorAll('.support-item');
            const totalSlides = items.length;
            const slideWidth = document.querySelector('.support-item').clientWidth;
    
            currentSlide += direction;
    
            if (currentSlide < 0) {
                currentSlide = totalSlides - 1; // Quay lại slide cuối
            } else if (currentSlide >= totalSlides) {
                currentSlide = 0; // Quay lại slide đầu
            }
    
            document.querySelector('.support-items').style.transform = `translateX(-${currentSlide * slideWidth}px)`;
        }
    
        // Optional: Tự động chuyển slide mỗi 5 giây
        setInterval(() => {
            moveSlide(1);
        }, 5000);
    </script>
